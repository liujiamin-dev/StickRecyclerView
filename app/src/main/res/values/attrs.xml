<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="TvRecyclerView">
        <attr name="tv_selectedItemCentered" format="boolean" />
        <attr name="tv_loadMoreBeforehandCount" format="integer" />
        <attr name="tv_selectedItemOffsetStart" format="dimension" />
        <attr name="tv_selectedItemOffsetEnd" format="dimension" />
        <attr name="tv_setInterceptTime" format="integer" />
    </declare-styleable>
    <!--MarQueeView attr-->
    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color" />
    <attr name="titleTextSize" format="dimension" />

    <declare-styleable name="CustomTitleView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
    </declare-styleable>
    <declare-styleable name="MarqueeTextView">
        <attr name="mtvtextsize" format="dimension"/>
        <attr name="mtvtextcolor" format="color"/>
        <attr name="mtvtext" format="string"/>
    </declare-styleable>
</resources>